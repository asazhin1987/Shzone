<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <script src="~/Scripts/umd/popper.js"></script>

    <link href="~/Content/menu.css" rel="stylesheet" />
    <link href="~/Content/monitor-grid.css" rel="stylesheet" />
    <link href="~/Content/monitor-controls.css" rel="stylesheet" />
    <script src="~/Scripts/monitor-ui.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link href="~/Content/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.mobile.all.min.css" rel="stylesheet" />

    <script src="~/Scripts/kendo/angular.min.js"></script>
    <script src="~/Scripts/kendo/kendo.angular.min.js"></script>
    <script src="~/Scripts/kendo/jszip.min.js"></script>
    <script src="~/Scripts/kendo/kendo.all.min.js"></script>

    @Scripts.Render("~/scripts/jquery.validate.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        textarea, input, select {
            max-width: 1080px !important;
        }

        .multiline {
            display: block !important;
            display: -webkit-box !important;
            -webkit-line-clamp: 2 !important;
            -webkit-box-orient: vertical !important;
            overflow: hidden !important;
            text-overflow: ellipsis !important;
            align-items: start !important;
            justify-content: start !important;
        }
    </style>
</head>
<body>
    <div class="spinner-border smallloader " role="status" style="display:none;position:absolute;top:50%;z-index:999;left:50%;" id="loading">
        <span class="sr-only">Loading...</span>
    </div>
    <div class="d-flex flex-row vh-100">
        <div id="sidebar" class="d-flex flex-column p-0 bg-primary-green">
            <div class="d-flex flex-row bg-dark-green sidebarrowcontainer" style="height:64px;">
                <img class=" align-self-center sidebarimage " src="~/Content/Images/emblem.png" />
                <span style=" font-size:18pt;" class="col text-light align-self-center pl-2 sidebarcaption">BIMANAGER</span>
                <span class="align-self-center sidebarcaption">@Html.Action("GetLanguage", "SharedZone")</span>

            </div>
            <span class="d-collapse bg-danger f-flex flex-column">@Html.Action("GetLanguage", "SharedZone")</span>
            <br />
            @Html.Action("PageMenu", "SharedZone")
        </div>
        <div class="col bg-light vh-100 overflow-auto p-0 ">
            @RenderBody()
        </div>
    </div>
    @Html.Partial("_Modal")
    @RenderSection("scripts", required: false)
</body>
</html>
